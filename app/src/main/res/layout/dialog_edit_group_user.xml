<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etDialogPartNum"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="0"
            android:gravity="center"

            android:textColor="@color/colorPrimaryDark"
            android:inputType="number"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="الجزء"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogDone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person_red"
            android:padding="5dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="قرائة الجزء"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogAdmin"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person_pin_circle_black_24dp"
            android:padding="5dp"
            android:layout_marginLeft="25dp"

            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="مدير المجموعة"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDeleteUser"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="حذف المشترك !"
        android:textColorHint="#FA0000"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDialogSave"
        android:text="حفظ"
        android:layout_marginLeft="25dp"
        android:background="@drawable/buttons"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"

        />
</LinearLayout>